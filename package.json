{
  "name": "school-management-system",
  "version": "0.2.0",
  "description": "Open Source School Management system. It can be used for schools, tutions, institutions, university, etc.",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "start": "bun run dist/main.js",
    "build": "bun run tsc && cp -r src/views dist && cp -r src/public dist",
    "dev": "nodemon --watch './' --exec 'bun src/main.ts' -e 'ts ejs json'",
    "type-check": "bun run tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anuj-weebjs/school-management-system.git"
  },
  "keywords": [
    "school-management",
    "javascript",
    "schools",
    "tutions",
    "helping",
    "community"
  ],
  "author": "anuj-weebjs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anuj-weebjs/school-management-system/issues"
  },
  "homepage": "https://github.com/anuj-weebjs/school-management-system#readme",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "mongoose": "^8.5.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.0",
    "nodemon": "^3.1.4"
  }
}
